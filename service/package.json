{
  "name": "archaeologist-service",
  "version": "0.0.1",
  "description": "Service used to perform jobs in the Sarcophagus ecosystem",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch 'src/**' index.ts",
    "build": "tsc -p tsconfig.json",
    "approve": "cross-env NODE_ENV=production NODE_PATH=./build node --experimental-specifier-resolution=node build/src/scripts/approve.js",
    "clean": "cross-env NODE_ENV=production NODE_PATH=./build node --experimental-specifier-resolution=node build/src/scripts/third_party/clean.js",
    "accuse": "cross-env NODE_ENV=production NODE_PATH=./build node --experimental-specifier-resolution=node build/src/scripts/third_party/accuse.js",
    "register": "cross-env NODE_ENV=production NODE_PATH=./build node --experimental-specifier-resolution=node build/src/scripts/register-profile.js",
    "update": "cross-env NODE_ENV=production NODE_PATH=./build node --experimental-specifier-resolution=node build/src/scripts/update-profile.js",
    "start": "tsc -p tsconfig.json && cross-env NODE_ENV=production NODE_PATH=./build node --experimental-specifier-resolution=node build/src/index.js",
    "start:local": "tsc -p tsconfig.json && cross-env NODE_ENV=production NODE_PATH=./build node --experimental-specifier-resolution=node build/src/scripts/run_local/index.js",
    "start:debug": "tsc -p tsconfig.json && cross-env NODE_ENV=production DEBUG=libp2p:* NODE_PATH=./build node build/src/index.js",
    "prettier": "npx prettier --write src/**",
    "peer-id-gen": "node ./src/scripts/peer-id-gen.js",
    "test": "tsc -p tsconfig.json && cross-env NODE_ENV=test NODE_PATH=./build node -r dotenv/config --experimental-specifier-resolution=node build/src/test/index.js dotenv_config_path=.env"
  },
  "license": "MIT",
  "dependencies": {
    "@chainsafe/libp2p-noise": "^6.2.0",
    "@koush/wrtc": "^0.5.3",
    "@libp2p/bootstrap": "^1.0.6",
    "@libp2p/kad-dht": "^1.0.16",
    "@libp2p/mplex": "^1.1.0",
    "@libp2p/tcp": "^1.0.11",
    "@libp2p/webrtc-star": "^2.0.1",
    "@libp2p/webrtc-star-signalling-server": "^2.0.1",
    "@libp2p/websockets": "^1.0.9",
    "@sarcophagus-org/sarcophagus-v2-contracts": "^0.1.0",
    "@types/node": "^18.0.0",
    "chalk": "^5.0.1",
    "dotenv": "^16.0.1",
    "ethers": "^5.6.9",
    "jsonfile": "^6.1.0",
    "libp2p": "^0.37.2",
    "node-schedule": "^2.1.0",
    "peer-id": "^0.16.0",
    "prompt-sync": "^4.2.0"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@types/node-schedule": "^2.1.0",
    "@types/prompt-sync": "^4.1.1",
    "arweave": "^1.11.6",
    "cross-env": "^7.0.3",
    "ecies-geth": "^1.6.5",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "hardhat": "^2.11.2",
    "nodemon": "^2.0.18",
    "rollup-plugin-polyfill-node": "^0.10.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=16.13.0"
  }
}